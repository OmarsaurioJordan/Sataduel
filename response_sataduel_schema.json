{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Esquema de personajes creados por Sataduel para hacer batallas",
  "type": "object",
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "nombre_usuario": {
          "type": "string"
        },
        "nombre_personaje": {
          "type": "string"
        },
        "resumen_personaje": {
          "type": "string"
        },
        "nivel": {
          "type": "integer"
        }
      }
    },
    "caracteristicas": {
      "type": "object",
      "properties": {
        "arma_principal": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "arma_secundaria": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "habilidades": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "cabeza": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "especie": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "color_fisico": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "vestimenta": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "color_vestido": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "personalidad": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        }
      }
    }
  }
}
